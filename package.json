    "@testing-library/user-event": "^14.2.1",
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "@types/puppeteer": "^5.4.6",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@types/uuid": "^8.3.4",
    "bootstrap-icons": "^1.8.3",
    "dexie": "^3.2.2",
    "history": "^5.3.0",
    "node-sass": "^7.0.1",
    "path-to-regexp": "^6.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-joyride": "^2.5.0",
    "react-scripts": "^5.0.1",
    "simple-runtypes": "^7.1.0",
    "typescript": "^4.7.4",
    "uuid": "^8.3.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "bundle-analyze": "react-scripts build && source-map-explorer 'build/static/js/*.js'",
    "start": "react-scripts start",
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "fmt": "prettier --write src/*.ts* && prettier --parser=scss --write src/*.scss && prettier --parser=css --write src/*.css",
    "scrape-svg-backgrounds": "ts-node -O '{\"module\":\"commonjs\"}' src/scrape-svg-backgrounds.ts"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "curly": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": false,
    "arrowParens": "always",
    "parser": "typescript"
  },
  "devDependencies": {
    "prettier": "^2.7.1",
    "puppeteer": "^15.0.2",
    "source-map-explorer": "^2.5.2",
    "ts-node": "^10.8.1"
  }
}
